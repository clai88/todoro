<main>
  <h1>Welcome to your list: <%= @current_list_name %> </h1>

  <% if @tasks[0] == nil %>

  <h2><%= @current_list_name %> is currently empty.  Click the box below to add a task</h2>

  <% else %>

  <h2>these are your tasks:</h2>

  <table class="table">
    <thead>
      <tr>
        <th>
          Task
        </th>
        <th>
          Due date
        </th>
        <th>
          Update Due date
        </th>
        <th>
          Mark as complete
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= task.name %>
        </td>
        <td>
          <% if task.due_on == nil %>
          Due date not set
          <% else %>
          <%= task.due_on %>
          <% end %>
        </td>
        <td>
          <form action="/items/<%= task.id %>" method="POST">
            <input type="hidden" name="_method" value="PATCH">
            <input type="datetime-local" name="task[due_on]" value="" placeholder="April 1 2016">
            <input type="submit" name="submit_button" value="Submit">
          </form>
        </td>
        <td>
          <form action="/items/<%= task.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" name="submit_button" value="Delete task">
          </form>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <% end %>



  <form action="/lists/<%= @current_list_name %>/items" method="post">
    <input type="text" name="task[name]" value="" placeholder="buy raw carrots">
    <input type="submit" name="submit_button" value="Submit">
  </form>


  <marquee direction="right"><a href="http://localhost:4567/">
    <img class="back_button" src="http://i644.photobucket.com/albums/uu168/melonangie/Anime/Totoro.png" >
  </a>
  </marquee>

</main>
<aside class="">

</aside>
