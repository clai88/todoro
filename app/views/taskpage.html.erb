<main>
  <h1>Welcome to your list <%= @current_list_name %> </h1>

  <h2>these are your tasks:</h2>

  <table class="table">
    <thead>
      <tr>
        <th>
          Task
        </th>
        <th>
          Due date
        </th>
        <th>
          Update Due date
        </th>
        <th>
          Mark as complete
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= task.name %>
        </td>
        <td>
          <% if task.due_date == nil %>
          Due date not set
          <% else %>
          <%= task.due_date %>
          <% end %>
        </td>
        <td>
          <form action="/items/<% @current.id %>" method="patch">
          <input type="text" name="task[due_date]" value="" placeholder="April 1 2016">
          <input type="submit" name="submit_button" value="Submit">
          </form>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>



  <form action="/lists/<%= @current_list_name %>/items" method="post">
    <input type="text" name="task[name]" value="" placeholder="buy raw carrots">
    <input type="submit" name="submit_button" value="Submit">
  </form>


  <a href="http://localhost:4567/">
    <img class="back_button" src="https://media.licdn.com/mpr/mpr/p/3/005/0a6/0b8/09fc494.png" alt="HTML tutorial" >
  </a>

</main>
